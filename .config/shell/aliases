#--------#
# CONFIG #
#--------#
alias config='/usr/bin/git --git-dir=$HOME/GitHub/dotfiles --work-tree=$HOME'

#-----#
# LSD #
#-----#
alias l='lsd -1'
alias ll='lsd -l'
alias lla='lsd -la'
alias llt='lsd --tree'
alias llta='lsd --tree -a'

#------#
# GREP #
#------#
alias grep='grep --color=auto'

#-----#
# GIT #
#-----#
alias gcl='git clone'
alias gad='git add'
alias gco='git commit -m'
alias gps='git push'
alias gpl='git pull'

#--------#
# NEOVIM #
#--------#
alias nv='nvim'
alias nvc='nvim $HOME/.config/init.vim'
alias nva='nvim $HOME/.config/shell/aliases'
alias nvp='nvim $HOME/.config/shell/profile'

#-------------------#
# PACKAGE MANGEMENT #
#-------------------#
alias xi='paru -S --noconfirm'
alias xd='sudo pacman -Rns'
alias x='paru -Ss'

#----------------------#
# NAVIGATION SHORTCUTS #
#----------------------#
alias cfg='cd $HOME/.config'
alias cdd='cd $HOME/Downloads'
alias cdg='cd $HOME/GitHub'
alias cds='cd $HOME/.config/shell'
alias nvpk='nvim $HOME/.local/share/packages'

#-------#
# POWER #
#-------#
alias die='sudo shutdown -h now'
alias out='pkill sway'

#-----------#
# PROTONVPN #
#-----------#
alias vpni="sudo protonvpn init"
alias vpnc="sudo protonvpn c"
alias vpnf="sudo protonvpn c -f"
alias vpnd="sudo protonvpn disconnect"
alias vpnr="sudo protonvpn reconnect"

#------------#
# WINDSCRIBE #
#------------#
alias wndc="windscribe connect"
alias wndd="windscribe disconnect"

#---------#
# SYSTEMD #
#---------#
alias sstart="sudo systemctl start"
alias sstop="sudo systemctl stop"
alias sres="sudo systemctl restart"
alias sstat="sudo systemctl status"
alias ssenable="sudo systemctl enable"
alias ssdisable="sudo systemctl disable"

#------#
# WGET #
#------#
alias wget="wget --hsts-file $HOME/.cache/wget-hsts"

#-----------------#
# MOUNT & UNMOUNT #
#-----------------#
alias mount="sudo mount"
alias umount="sudo umount"

#---------#
# NEXTDNS #
#---------#
alias nextstart="sudo nextdns start && sudo nextdns activate"
alias nextstop="sudo nextdns stop && sudo nextdns deactivate"
alias nextstatus="sudo nextdns status"

#-------#
# LSBLK #
#-------#
alias lsb="lsblk"

#---------#
# NETWORK #
#---------#
alias p="ping google.com"
alias nres="sudo systemctl restart NetworkManager"

#--------#
# YT-DLP #
#--------#
alias yt="yt-dlp"
alias yb="yt-dlp -f b"
alias yq="yt-dlp -F"

#-----#
# MPV #
#-----#
mpvb="mpv --ytdl--format=best"
mpvm="mpv --ytdl--format=480p"
mpvw="mpv --ytdl--format=worst"
